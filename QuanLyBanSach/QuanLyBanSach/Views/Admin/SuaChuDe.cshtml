@model QuanLyBanSach.Models.ChuDe

@{
    ViewBag.Title = "SuaChuDe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mt-3">Sửa Chủ đề</h2>
@if (ViewData["Loi"] != null)
{
    <div class="badge-danger mt-2 mb-2 p-2 text-center">
        @ViewData["Loi"]
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaCD)

        <div class="form-group">
            @Html.LabelFor(model => model.TenChuDe, "Tên Chủ Đề", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
    </div>
}

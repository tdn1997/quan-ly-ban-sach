@model IEnumerable<QuanLyBanSach.Models.ChuDe>

@{
    ViewBag.Title = "ChuDe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mt-3">Chủ đề</h2>
<hr />

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary mt-1" data-toggle="modal" data-target="#themChuDeModal">
    Thêm chủ đề
</button>

<!-- Modal -->
<div class="modal fade" id="themChuDeModal" tabindex="-1" aria-labelledby="themChuDeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="themChuDeModalLabel">Thêm chủ đề</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("ChuDe", "Admin",
                    new { ReturnUrl = ViewBag.ReturnUrl },
                    FormMethod.Post, new { @class = "form" }))
                {
                    <div class="form-group">
                        <label class="col-form-label" for="tenChuDe">
                            Tên Chủ đề
                        </label>
                        <input class="form-control" id="tenChuDe" name="tenChuDe" />
                        @ViewData["LoiTenChuDe"]
                    </div>
                    <hr />
                    <div class="mt-4 d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary mr-2" data-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-primary">Lưu Chủ đề</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<h3>
    @ViewBag.ThongBao
</h3>

<table class="table table-striped mt-3">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Mã chủ đề</th>
            <th scope="col">Tên chủ đề</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chuDe in Model)
        {
            <tr>
                <th>@chuDe.MaCD</th>
                <td>@chuDe.TenChuDe</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary"  href="@Url.Action("SuaChuDe", "Admin", new { id=chuDe.MaCD})">
                        Sửa
                    </a>

                    <a class="btn btn-sm btn-danger" href="@Url.Action("XoaChuDe", "Admin", new { id=chuDe.MaCD})">
                        Xóa
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

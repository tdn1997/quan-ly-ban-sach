@model QuanLyBanSach.Models.KhachHang

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DangNhap</h2>

@using (Html.BeginForm("POST"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Dang Nhap</h4>
        <hr />

        <h3>
            @ViewBag.ThongBao
        </h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.TaiKhoan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                <div class="text-danger">
                    @ViewData["LoiTaiKhoan"]
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="MatKhau" name="MatKhau" type="password" value="" />
                <div class="text-danger">
                    @ViewData["LoiMatKhau"]
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dang Nhap" class="btn btn-default" />
            </div>
        </div>
    </div>
}
